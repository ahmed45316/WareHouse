@model WareHouse.Mvc.Models.InvoiceVm
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-info pl-3">Delete Invoice</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Id"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Id" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="InvoicTypeName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="InvoicTypeName" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="InvoiceDateTime"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="InvoiceDateTime" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CustomerName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CustomerName" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="InvoiceNumber"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="InvoiceNumber" disabled class="form-control" />
                    </div>
                </div>                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="InvoiceTotal"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="InvoiceTotal" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>

